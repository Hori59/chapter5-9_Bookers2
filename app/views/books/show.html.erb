<div class="container">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render 'users/temple', book: @book, user: @user %>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @book_show.user, :profile_image, :fill, 40, 40, fallback: "profile.jpg", class: "attachment user profile_image fallback" %> <br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @book_show.title, book_path(@book_show) %></td>
            <td><%= @book_show.body %></td>

            <% if user_signed_in? && @book_show.user_id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book_show), class: "btn-sm btn-success edit_book_28102" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book_show), method: :delete, class: "btn-sm btn-danger destroy_book_28102", data: {confirm: "本当に消しますか？"} %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- ブックの編集画面 -->
<div class="container">
  <p id="notice"></p>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for (@book) do |f| %>
        <div class="field row">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="field row">
          <%= f.label :body %>
          <%= f.text_area :body, autofocus: true %>
        </div>

        <div class="actions row">
          <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book) %> |
      <%= link_to "Back", books_path %>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>